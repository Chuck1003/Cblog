extends layout
block content
    a(href='/logout' title='退出' class="curuser") #{username}

    main.main
        section.userintro
            p
                h2.usertitle #{title}-#{username}的个人主页
            hr
            if success
                h3.usersuccess #{success}
            form.submitform(method='post',action='/post')
                input.article(type='text',name='article',id='article',placeholder='说出你此刻的想法...')
                input.submit(type='submit',name='submit',value='发表')
        section.show
           ul
               each val in posts
                   li= val.user+":"
                       p #{val.post}&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp#{val.updated}
                       a(href='/delete?id=#{val.id}') 删除